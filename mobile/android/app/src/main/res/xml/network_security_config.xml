<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for debugging (remove in production if not needed) -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Trust AWS AppSync endpoints -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">appsync-api.eu-west-1.amazonaws.com</domain>
        <domain includeSubdomains="true">appsync-realtime-api.eu-west-1.amazonaws.com</domain>
        <domain includeSubdomains="true">cognito-idp.eu-west-1.amazonaws.com</domain>
        <domain includeSubdomains="true">cognito-identity.eu-west-1.amazonaws.com</domain>
    </domain-config>
</network-security-config>
